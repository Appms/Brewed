<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ams.brewed.activities.BreweryActivity"
    android:background="#ffffb25a"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/breweryLogo"
        android:src="@drawable/brewery_icon2"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:scaleType="fitCenter" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_weight="0.25"
        android:layout_margin="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffff9159"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageButton1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:id="@+id/textView1"
                android:textSize="40dp"
                android:textStyle="bold|italic"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is the name"
                android:id="@+id/breweryName"
                android:textSize="30dp"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Established"
                android:id="@+id/textView2"
                android:layout_marginTop="20dp"
                android:textSize="40dp"
                android:layout_alignTop="@+id/scrollView"
                android:layout_alignStart="@+id/scrollView"
                android:textStyle="bold|italic"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1994"
                android:id="@+id/breweryEstablished"
                android:layout_marginTop="0dp"
                android:textSize="30dp"
                android:layout_alignTop="@+id/scrollView"
                android:layout_alignStart="@+id/scrollView"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Website"
                android:id="@+id/textView3"
                android:layout_marginTop="20dp"
                android:textSize="40dp"
                android:layout_alignTop="@+id/scrollView"
                android:layout_centerHorizontal="true"
                android:textStyle="bold|italic"
                android:gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="www.google.es"
                android:autoLink="web"
                android:id="@+id/breweryWebsite"
                android:layout_marginTop="0dp"
                android:textSize="30dp"
                android:layout_alignTop="@+id/scrollView"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:autoLink="web" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
