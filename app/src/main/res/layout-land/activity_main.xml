<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ams.brewed.activities.MainActivity"
    android:background="#fffffad9">

    <TextView android:text="Brewed" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="60dp"
        android:id="@+id/beerName"
        android:textColor="#ff000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/imageLogo"
        android:src="@drawable/icon_splash"
        android:background="#ffbb9f72"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton4"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:onClick="onPressedBeer" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton2"
        android:src="@drawable/icon_splash"
        android:background="#ffbb9f72"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/imageButton3"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:onClick="onPressedRandomBeer" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton3"
        android:src="@drawable/icon_splash"
        android:background="#ffbb9f72"
        android:layout_marginStart="55dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imageButton4"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:onClick="onPressedGeographicalBreweries" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton4"
        android:src="@drawable/icon_splash"
        android:background="#ffbb9f72"
        android:layout_marginStart="75dp"
        android:layout_alignTop="@+id/imageButton3"
        android:layout_alignParentStart="false"
        android:layout_marginBottom="0dp"
        android:clickable="true"
        android:onClick="onPressedBrewery" />

</RelativeLayout>
