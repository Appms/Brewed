<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ams.brewed.activities.SplashActivity"
    android:background="#fffffad9">

    <TextView android:text="Brewed" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="60dp"
        android:id="@+id/beerName"
        android:textColor="#ff000000"
        android:layout_marginTop="135dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/locationIcon"
        android:src="@drawable/icon_splash"
        android:layout_gravity="center"
        android:layout_below="@+id/beerName"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/progressBar"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="150dp"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="90dp" />

</RelativeLayout>
