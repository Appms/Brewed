<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ams.brewed.activities.MainActivity"
    android:background="#fffffad9">

    <TextView android:text="Brewed" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="60dp"
        android:id="@+id/beerName"
        android:textColor="#ff000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/imageLogo"
        android:src="@drawable/icon_splash"
        android:layout_marginTop="125dp"
        android:background="#ffbb9f72"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:onClick="onPressedBeer" />

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton2"
        android:src="@drawable/icon_splash"
        android:layout_below="@+id/imageLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#ffbb9f72"
        android:onClick="onPressedRandomBeer"
        android:clickable="true" />

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton3"
        android:src="@drawable/icon_splash"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/imageButton2"
        android:layout_centerHorizontal="true"
        android:background="#ffbb9f72"
        android:onClick="onPressedBrewery"
        android:clickable="true" />

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton4"
        android:src="@drawable/icon_splash"
        android:layout_below="@+id/imageButton3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#ffbb9f72"
        android:onClick="onPressedGeographicalBreweries"
        android:clickable="true" />
</RelativeLayout>
