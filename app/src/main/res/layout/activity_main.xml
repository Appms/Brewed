<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ams.brewed.activities.MainActivity"
    android:background="#fffffad9"
    android:orientation="vertical">

    <TextView android:text="Brewed" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textSize="60dp"
        android:id="@+id/beerName"
        android:textColor="#ff000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:layout_gravity="center" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/imageButton1"
        android:src="@drawable/icon_splash"
        android:background="#ffbb9f72"
        android:clickable="true"
        android:onClick="onPressedBeerSearch"
        android:padding="0dp"
        android:layout_margin="20dp" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/imageButton2"
        android:src="@drawable/icon_splash"
        android:background="#ffbb9f72"
        android:onClick="onPressedRandomBeerSearch"
        android:clickable="true"
        android:layout_margin="20dp" />

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/imageButton1"
        android:src="@drawable/icon_splash"
        android:background="#ffbb9f72"
        android:onClick="onPressedBrewerySearch"
        android:clickable="true"
        android:layout_margin="20dp" />

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/imageButton2"
        android:src="@drawable/icon_splash"
        android:background="#ffbb9f72"
        android:onClick="onPressedGeographicalBreweriesSearch"
        android:clickable="true"
        android:layout_margin="20dp" />

</LinearLayout>
