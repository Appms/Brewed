<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ams.brewed.activities.MainActivity"
    android:background="#ffffb25a"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/logo"
        android:src="@drawable/brewed_icon2"
        android:padding="0dp"
        android:layout_margin="10dp"
        android:scaleType="fitCenter" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/imageButton1"
        android:background="#ff4ad6a9"
        android:clickable="true"
        android:onClick="onPressedBeerSearch"
        android:padding="0dp"
        android:layout_margin="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/brewed_icon2" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/imageButton2"
        android:background="#ff4ad6a9"
        android:onClick="onPressedRandomBeerSearch"
        android:clickable="true"
        android:layout_margin="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/brewed_icon2" />

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/imageButton3"
        android:background="#ff4ad6a9"
        android:onClick="onPressedBrewerySearch"
        android:clickable="true"
        android:layout_margin="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/brewed_icon2" />

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/imageButton4"
        android:background="#ff4ad6a9"
        android:onClick="onPressedGeographicalBreweriesSearch"
        android:clickable="true"
        android:layout_margin="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/brewed_icon2" />

</LinearLayout>
